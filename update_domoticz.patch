 #!/bin/sh
-cd $1
 
-tar xfz update.tgz
-rm update.tgz
-rm update.tgz.sha256sum
-
-lowercase(){
-    echo "$1" | sed "y/ABCDEFGHIJKLMNOPQRSTUVWXYZ/abcdefghijklmnopqrstuvwxyz/"
-}
-
-OS=`lowercase \`uname -s\``
-MACH=`uname -m`
-
-# Restart on OSX
-if [ ${OS} = "darwin" ]; then
-  launchctl unload /System/Library/LaunchAgents/com.domoticz.server.plist
